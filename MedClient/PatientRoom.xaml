<Window x:Class="MedClient.PatientRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PatientRoom" Height="300" Width="300" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Background="#FFE5E5E5">

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="nameData" HorizontalAlignment="Center"></Label>

        <ListBox Grid.Row="1" Name="listbox1" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <Label Content="{Binding}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Name="selectDoctorButton" HorizontalAlignment="Center"  Width="178" Height="28" Content="Select" Margin="62,6,52,6" Click="selectDoctorButton_Click"></Button>

    </Grid>
</Window>
